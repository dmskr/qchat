doctype html

html
  head
    title Hello, #{first} #{last}!
    link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css")
    body
      div.container
        h1 Hey, there, #{first}!
        p.
          According to my data your name is #{first} #{last}.
          You are #{age || 'unknown'} years old, and i predict you're fond the colour #{colour}... Correct? At the moment you appear to be #{mood}.
        img(src="/static/images/#{mood}.jpeg", width=200)
        p That's all I know...

        #response

        form(action='/room/messages', method='post')
          textarea#newmessage(name="message")
          br
          input(type='submit', value='Send')

script.
  var http = new XMLHttpRequest();
  http.onreadystatechange = function() {
    if (this.readyState > 2) {
      var response = this.responseText;
      var element = document.getElementById('response');

      console.log(response);
      element.innerHTML = response;
    }
  }

  http.open('get', '/room/messages', true);
  http.send();

